@model IEnumerable<InventoryManagement.Models.Product>

@{
    ViewData["Title"] = "Products Dashboard";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-boxes"></i> Products Dashboard</h1>
            <p class="mb-0 mt-2">Manage your inventory products</p>
        </div>
        <a asp-action="Create" class="btn btn-light btn-lg">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-box"></i> @item.Name
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <span class="badge badge-primary">SKU: @item.SKU</span>
                    </div>

                    <div class="mb-2">
                        <strong>Price:</strong>
                        <span class="text-success">@item.Price.ToString("C")</span>
                    </div>

                    <div class="mb-3">
                        <strong>Stock Level:</strong>
                        @if (item.StockLevel == 0)
                        {
                            <span class="badge badge-danger">
                                <i class="fas fa-times-circle"></i> Out of Stock
                            </span>
                        }
                        else if (item.StockLevel < 10)
                        {
                            <span class="badge badge-warning">
                                <i class="fas fa-exclamation-triangle"></i> @item.StockLevel units
                            </span>
                        }
                        else
                        {
                            <span class="badge badge-success">
                                <i class="fas fa-check-circle"></i> @item.StockLevel units
                            </span>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(item.Description))
                    {
                        <div class="mb-3">
                            <small class="text-muted">@item.Description</small>
                        </div>
                    }
                </div>
                <div class="card-footer bg-transparent border-0">
                    <div class="d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm flex-fill">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm flex-fill">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm flex-fill">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center" style="background: linear-gradient(135deg, #e8f4f8, #c0d6e4); border: none; border-radius: 12px;">
        <i class="fas fa-info-circle fa-3x mb-3" style="color: var(--patronus-primary);"></i>
        <h4>No products found</h4>
        <p>Start by adding your first product to the inventory.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Product
        </a>
    </div>
}