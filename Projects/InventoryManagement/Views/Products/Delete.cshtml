@model InventoryManagement.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="page-header bg-danger">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-trash"></i> Delete Product</h1>
            <p class="mb-0 mt-2">Are you sure you want to delete this product?</p>
        </div>
        <a asp-action="Index" class="btn btn-light">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    <strong>Warning!</strong> This action cannot be undone.
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">SKU:</dt>
                    <dd class="col-sm-8">@Model.SKU</dd>

                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                    <dt class="col-sm-4">Stock Level:</dt>
                    <dd class="col-sm-8">@Model.StockLevel units</dd>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    }
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete Product
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>