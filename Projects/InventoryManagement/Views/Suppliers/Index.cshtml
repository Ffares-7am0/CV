@model IEnumerable<InventoryManagement.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-truck"></i> Suppliers</h1>
            <p class="mb-0 mt-2">Manage your suppliers</p>
        </div>
        <a asp-action="Create" class="btn btn-light btn-lg">
            <i class="fas fa-plus"></i> Add New Supplier
        </a>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-building"></i> @item.Name
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <i class="fas fa-envelope text-primary"></i>
                        <strong>Email:</strong>
                        <a href="mailto:@item.ContactEmail">@item.ContactEmail</a>
                    </div>

                    <div class="mb-3">
                        <i class="fas fa-phone text-success"></i>
                        <strong>Phone:</strong>
                        <a href="tel:@item.Phone">@item.Phone</a>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <div class="d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm flex-fill">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm flex-fill">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center" style="background: linear-gradient(135deg, #e8f4f8, #c0d6e4); border: none; border-radius: 12px;">
        <i class="fas fa-info-circle fa-3x mb-3" style="color: var(--patronus-primary);"></i>
        <h4>No suppliers found</h4>
        <p>Start by adding your first supplier to the system.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Supplier
        </a>
    </div>
}