@model Patient

@{
    ViewData["Title"] = $"Patient Details: {Model.Name}";
}

<h1>Patient Details and Appointment History</h1>

<div>
    <h4>Patient: @Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ContactNumber)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ContactNumber)
        </dd>
    </dl>
</div>

<hr />

<h3>Appointment History</h3>
@if (Model.Appointments != null && Model.Appointments.Any())
{
    <table class="table table-striped">
        <thead class="bg-brown text-white">
            <tr>
                <th>Date/Time</th>
                <th>Doctor</th>
                <th>Specialty</th>
                <th>Duration (Min)</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Appointments)
            {
                <tr>
                    <td>@item.AppointmentDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td><a asp-controller="Doctors" asp-action="Details" asp-route-id="@item.DoctorId">@item.Doctor.Name</a></td>
                    <td>@item.Doctor.Specialty</td>
                    <td>@item.DurationMinutes</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="alert alert-info">This patient has no appointment history.</p>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-brown">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>