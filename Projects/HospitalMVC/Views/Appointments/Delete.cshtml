@model Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<h1>Delete Appointment</h1>

<h3>Are you sure you want to delete this appointment?</h3>
<div class="alert alert-warning">
    <strong>Details:</strong>
</div>
<div>
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Doctor)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Doctor.Name) (@Html.DisplayFor(model => model.Doctor.Specialty))
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Patient.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.AppointmentDateTime)
        </dt>
        <dd class="col-sm-9">
            @Model.AppointmentDateTime.ToString("yyyy-MM-dd HH:mm")
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>