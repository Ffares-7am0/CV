@model IEnumerable<Project>

@{
    ViewData["Title"] = "Projects Dashboard";
}

<style>
    .project-card {
        border-top: 5px solid #795548;
        transition: transform 0.3s, box-shadow 0.3s;
    }
    .project-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
    .project-title {
        color: #5d4037;
    }
    .btn-brown {
        background-color: #795548;
        border-color: #795548;
        color: white;
    }
    .btn-brown:hover {
        background-color: #5d4037;
        border-color: #5d4037;
        color: white;
    }
</style>

<h1>Projects Dashboard</h1>
<p>
    <a asp-action="Create" class="btn btn-brown">Create New Project</a>
    <a asp-controller="TeamMembers" asp-action="Index" class="btn btn-secondary">View Team Members</a>
</p>

<div class="row mt-4">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card project-card h-100 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title project-title">@Html.DisplayFor(modelItem => item.Name)</h4>
                    <h6 class="card-subtitle mb-2 text-muted">Starts: @item.StartDate.ToShortDateString() | Ends: @item.EndDate.ToShortDateString()</h6>
                    
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    
                    <div class="mt-3">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View Tasks</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center mt-4">No projects have been created yet.</div>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}