@model LibraryManagement.Models.Category

@{
    ViewData["Title"] = "تعديل القسم";
}

<div class="auth-card">
    <h3 class="text-center mb-4">تعديل القسم: @Model.Name</h3>

    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="CategoryId" /> // لإرسال الـ ID في الـ Post

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">حفظ التعديلات</button>
    </form>

    <div class="mt-3 text-center">
        <a asp-action="Index">العودة إلى القائمة</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}