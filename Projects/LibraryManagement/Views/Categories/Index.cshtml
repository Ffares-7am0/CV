@model IEnumerable<LibraryManagement.Models.Category>

@{
    ViewData["Title"] = "إدارة الأقسام";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">إدارة الأقسام</h2>
    <a asp-action="Create" class="btn btn-primary">إضافة قسم جديد</a>
</div>

<div class="card shadow">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-warning">
                لا توجد أقسام مسجلة حتى الآن.
            </div>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-primary me-2">تعديل</a>
                                <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-danger">حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>